{% extends '::base_sidebar.html.twig' %}

{% block body %}
    <h1>Clubs</h1>

    <ul>
        {% for club in clubs %}
            <li>
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ url('club_delete', { 'id': club.id }) }}"><i class="fa fa-trash-o"></i></a>
                    <a href="{{ url('club_edit', { 'id': club.id }) }}"><i class="fa fa-pencil"></i></a>
                {% endif %}
                <a href="{{ url('club_detail', { 'id': club.id }) }}">{{ club.name }}</a>
            </li>
        {% else %}
            <li>No Clubs :(</li>
        {% endfor %}
    </ul>
{% endblock %}

{% block sidebar %}
    {% if is_granted('ROLE_ADMIN') %}
        <div class="widget">
            <h3 class="widget-title">Actions</h3>
            <ul>
                <li><a href="{{ url('club_create') }}">Create</a></li>
            </ul>
        </div>
    {% endif %}

    {{ parent() }}
{% endblock %}
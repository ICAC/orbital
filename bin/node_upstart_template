#!upstart
description "orbita-node"
author      "will"

start on startup
stop on shutdown

env HOME="@@INSTALL_PATH@@"

script
    echo $$ > /var/run/orbital-node.pid
    cd $HOME
    exec sudo -u orbital-node $(which node) $HOME/index.js >> /var/log/orbital-node.log 2>&1
end script

pre-start script
    # Date format same as (new Date()).toISOString() for consistency
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Starting" >> /var/log/orbital-node.log
end script

pre-stop script
    rm /var/run/orbital-node.pid
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Stopping" >> /var/log/orbital-node.log
end script
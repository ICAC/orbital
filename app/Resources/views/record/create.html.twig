{% extends '::base.html.twig' %}

{% block title %}
    Create Record
{% endblock %}

{% block body %}
    {{ form_start(form) }}
    {{ form_widget(form) }}

    <input type="submit" value="Create"/>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        'use strict';

        (function($) {
            $('#{{ form.rounds.vars.id }}').collection('Round');
            $('#{{ form.clubs.vars.id }}').collection('Club');
        })(jQuery);
    </script>

{% endblock %}
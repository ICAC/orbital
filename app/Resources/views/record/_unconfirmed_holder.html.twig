<td class="shrink">{{ holder.date|date(DATE_FORMAT) }}</td>
<td>
    {% include ':record:_holder.html.twig' with { 'people': holder.people } only %}
</td>
{% if record.numHolders > 1 %}
    <td class="shrink">{{ holder.score }}</td>
{% endif %}
<td class="actions">
    <a class="shrink" href="{{ url('record_holder_confirm', { 'recordId': holder.record.id, 'holderId': holder.id }) }}">
        <i class="fa fa-check" title="Confirm"></i>
    </a>
</td>
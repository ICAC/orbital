{% extends '::base_sidebar.html.twig' %}
{% import ':macro:display.html.twig' as display %}

{% block title %}
    Records
{% endblock %}

{% block body %}
    <ul class="list">
        {% for record in records %}
            <li>
                {{ display.record(record) }}
                {% if is_granted('ROLE_ADMIN') %}
                    <span class="actions">
                        <a href="{{ url('record_edit', { 'id': record.id }) }}"><i class="fa fa-pencil"></i></a>
                        <a href="{{ url('record_delete', { 'id': record.id }) }}"><i class="fa fa-trash-o"></i></a>
                    </span>
                {% endif %}
            </li>
        {% else %}
            <li>No Records :(</li>
        {% endfor %}
    </ul>
{% endblock %}

{% block sidebar %}
    {% if is_granted('ROLE_ADMIN') %}
        <div class="widget">
            <h3 class="widget-title">Actions</h3>
            <ul>
                <li><a href="{{ url('record_create') }}">Create</a></li>
            </ul>
        </div>
    {% endif %}

    {{ parent() }}
{% endblock %}

{% extends '::base_sidebar.html.twig' %}

{% block body %}
    <h1>Records</h1>

    <ul>
        {% for record in records %}
            <li>
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ url('record_delete', { 'id': record.id }) }}"><i class="fa fa-trash-o"></i></a>
                    <a href="{{ url('record_edit', { 'id': record.id }) }}"><i class="fa fa-pencil"></i></a>
                {% endif %}
                <a href="{{ url('record_detail', { 'id': record.id }) }}">
                    {{ record.displayName }}
                </a>
            </li>
        {% else %}
            <li>No Records :(</li>
        {% endfor %}
    </ul>
{% endblock %}

{% block sidebar %}
    {% if is_granted('ROLE_ADMIN') %}
        <div class="widget">
            <h3 class="widget-title">Actions</h3>
            <ul>
                <li><a href="{{ url('record_create') }}">Create</a></li>
            </ul>
        </div>
    {% endif %}

    {{ parent() }}
{% endblock %}
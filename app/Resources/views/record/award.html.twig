{% extends '::base.html.twig' %}

{% block title %}
    Award Record
{% endblock %}

{% block body %}
    {{ form_start(form) }}
    {{ form_widget(form) }}

    <input type="submit" value="Award"/>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        'use strict';

        (function ($) {
            $('select + label').each(function() {
                var prev = $(this).prev();
                $(this).detach().insertBefore(prev);
            });

            $('select').select2();
        })(jQuery);
    </script>

{% endblock %}

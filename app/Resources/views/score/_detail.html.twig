<dl>
    <dt>Date Shot</dt>
    <dd>
        {{ score.dateShot|date(DATE_FORMAT) }}
        {% if score.competition %}
            in Competition
        {% endif %}
    </dd>
    <dt>Skill / Bow</dt>
    <dd>
        {{ score.skill|enum('skill') }} {{ score.bowtype|enum('bowtype') }}
    </dd>
    <dt>Score</dt>
    <dd>{{ score.score }}</dd>
    <dt>Golds</dt>
    <dd>{{ score.golds }}</dd>
    <dt>Hits</dt>
    <dd>{{ score.hits }}</dd>
    <dt>Handicap</dt>
    <dd>{{ handicap }}</dd>
    <dt>Date Accepted</dt>
    <dd>
        {% if score.dateAccepted %}
            accepted {{ score.dateAccepted|date(DATE_FORMAT) }}
        {% else %}
            not yet accepted
        {% endif %}
    </dd>
</dl>

{% extends '::base.html.twig' %}
{% import ':macro:display.html.twig' as display %}

{% block title %}
    Approval Queue
    {% if club != null %}
        - {{ display.club(club) }}
    {% endif %}
{% endblock %}

{% block body %}
    <ul class="list">
        {% for item in items %}
            <li>
                <a href="{{ item.url }}">{{ item.name }}</a>
                {# TODO use type+data to render custom stuff #}
            </li>
        {% else %}
            <li>
                <span class="text">Yeah! You've got nothing to do =D</span>
            </li>
        {% endfor %}
    </ul>
{% endblock %}

{% block sidebar %}
    {{ render(url('club_filter')) }}

    {{ parent() }}
{% endblock %}

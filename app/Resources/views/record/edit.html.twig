{% extends '::base.html.twig' %}

{% block title %}
    Edit Record
{% endblock %}

{% block body %}
    {{ form_start(form) }}
    {{ form_widget(form) }}

    <input type="submit" value="Save"/>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        'use strict';

        (function($) {
            $('#{{ form.rounds.vars.id }}').collection('Round', { allowRemove: true });
            $('#{{ form.clubs.vars.id }}').collection('Club', { allowRemove: true });
        })(jQuery);
    </script>

{% endblock %}
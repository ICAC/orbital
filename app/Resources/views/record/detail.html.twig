{% extends '::base.html.twig' %}

{% block title %}
    {{ record.displayName }}
{% endblock %}

{% block body %}
    {% set holder = record.currentHolder %}

    {% include ':record:_current_holder.html.twig' with { 'record': record, 'holder': holder } only %}
    {% include ':record:_requirements.html.twig' with { 'record': record } only %}

    {% if record.holders|length > 1 %}
        <h2>Past Holders</h2>
        <table>
            {% for holder in record.holders[1:] %}
                <tr>
                    {% include ':record:_past_holder.html.twig' with { 'record': record, 'holder': holder } only %}
                </tr>
            {% endfor %}
        </table>
    {% endif %}
{% endblock %}

{% block sidebar %}
    {% if is_granted('ROLE_ADMIN') %}
        <div class="widget">
            <h3 class="widget-title">Actions</h3>
            <ul>
                <li><a href="{{ url('record_award', { 'id': record.id }) }}">Award</a></li>
                <li><a href="{{ url('record_revoke', { 'id': record.id }) }}">Revoke</a></li>
                <li><a href="{{ url('record_edit', { 'id': record.id }) }}">Edit</a></li>
                <li><a href="{{ url('record_delete', { 'id': record.id }) }}">Delete</a></li>
            </ul>
        </div>
    {% endif %}

    {{ parent() }}
{% endblock %}

{% extends '::base.html.twig' %}
{% import ':macro:display.html.twig' as display %}

{% block title %}
    Badges
{% endblock %}

{% block body %}
    <ul class="list">
        {% for badge in badges %}
            <li>
                {{ display.badge(badge) }}
                {% if is_granted('ROLE_ADMIN') %}
                    <span class="actions">
                        <a href="{{ url('badge_edit', { 'id': badge.id }) }}"><i class="fa fa-pencil"></i></a>
                        <a href="{{ url('badge_delete', { 'id': badge.id }) }}"><i class="fa fa-trash-o"></i></a>
                    </span>
                {% endif %}
            </li>
        {% else %}
            <li>No Badges :(</li>
        {% endfor %}
    </ul>
{% endblock %}

{% block sidebar %}
    {% if is_granted('ROLE_ADMIN') %}
        <div class="widget">
            <h3 class="widget-title">Actions</h3>
            <ul>
                <li><a href="{{ url('badge_create') }}">Create</a></li>
                <li><a href="{{ url('badge_sheet') }}">Generate Sheet</a></li>
            </ul>
        </div>
    {% endif %}

    {{ parent() }}
{% endblock %}

{% extends '::base_sidebar.html.twig' %}

{% block title %}
    Competitions
{% endblock %}

{% block body %}
    <ul class="list">
        {% for competition in competitions %}
            <li>
                <a href="{{ url('competition_detail', { 'id': competition.id }) }}">{{ competition.name }}</a>
                {% if is_granted('ROLE_ADMIN') or is_granted('ENTER', competition) %}
                    <span class="actions">
                        {% if is_granted('ENTER', competition) %}
                            <a href="{{ url('competition_enter', { 'id': competition.id }) }}">
                                <i class="fa fa-sign-in" title="Enter this competition"></i>
                            </a>
                        {% endif %}
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ url('competition_edit', { 'id': competition.id }) }}">
                                <i class="fa fa-pencil"></i>
                            </a>
                            <a href="{{ url('competition_delete', { 'id': competition.id }) }}">
                                <i class="fa fa-trash-o"></i>
                            </a>
                        {% endif %}
                    </span>
                {% endif %}
            </li>
        {% else %}
            <li>No Competitions :(</li>
        {% endfor %}
    </ul>
{% endblock %}

{% block sidebar %}
    {% if is_granted('ROLE_ADMIN') %}
        <div class="widget">
            <h3 class="widget-title">Actions</h3>
            <ul>
                <li><a href="{{ url('competition_create') }}">Create</a></li>
            </ul>
        </div>
    {% endif %}

    {{ parent() }}
{% endblock %}

{% macro field(title, value, admin=false) %}
    {% if value %}
        <dt{% if admin %} class="admin"{% endif %}>{{ title }}</dt>
        <dd>{{ value }}</dd>
    {% endif %}

{% endmacro %}
{% from _self import field %}

<dl>
    {% include ':person:_detail_admin.html.twig' with { 'person': person } only %}
    {{ field('Skill', person.skill|enum('skill')) }}
    {% if person.bowtype %}
        {{ field('Preferred bow type', person.bowtype|enum('bowtype')) }}
    {% endif %}
    <dt>Indoor Handicap</dt>
    <dd>
        {% if person.getCurrentHandicap(true) %}
            {{ person.getCurrentHandicap(true).handicap }}
        {% else %}
            None
        {% endif %}
    </dd>
    <dt>Outdoor Handicap / Classification</dt>
    <dd>
        {% if person.getCurrentHandicap(false) %}
            {{ person.getCurrentHandicap(false).handicap }}
        {% else %}
            None
        {% endif %}

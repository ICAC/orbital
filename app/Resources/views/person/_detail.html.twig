{% macro field(title, value, admin=false) %}
    {% if value %}
        <dt{% if admin %} class="admin"{% endif %}>{{ title }}</dt>
        <dd>{{ value }}</dd>
    {% endif %}

{% endmacro %}

<dl>
    {% if is_granted('ROLE_ADMIN') %}
        {{ field('ArcheryGB #', person.agbNumber, true) }}
        {{ field('CID', person.cid, true) }}
        {{ field('College username', person.cuser, true) }}
        {{ field('Email', person.email, true) }}
        {{ field('Mobile', person.mobile, true) }}
        {% if person.gender %}
            {{ field('Gender', person.gender|enum('gender'), true) }}
        {% endif %}
        {% if person.dateOfBirth %}
            {{ field('DoB', person.dateOfBirth|date('d/m/Y'), true) }}
        {% endif %}
    {% endif %}
    {{ field('Skill', person.skill|enum('skill')) }}
    {% if person.bowtype %}
        {{ field('Preferred bow type', person.bowtype|enum('bowtype')) }}
    {% endif %}
    <dt>Handicap</dt>
    <dd>
        {% if person.currentHandicap %}
            {{ person.currentHandicap.handicap }}
        {% else %}
            None
        {% endif %}
    </dd>
    <dt>Classification</dt>
    <dd>
        TODO
    </dd>
</dl>
